<UserControl x:Class="ReGeoCodeMyPosition.ComeOnEatChicken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
             Height="auto" Width="120">

    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_OnLoaded" Background="{StaticResource PhoneChromeBrush}">
        <StackPanel>
            <TextBlock>我在</TextBlock>
            <TextBlock x:Name="LocationBlock" TextWrapping="Wrap"></TextBlock>
            <TextBlock>来吃鸡肉</TextBlock>
            <Image Source="/Assets/beier.png" Stretch="Fill" Height="77" Margin="0,0,10,0"></Image>
        </StackPanel>
    </Grid>
</UserControl>